<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>
            <glocash_pay>
                <active>1</active>
                <model>Glocash\Checkout\Model\Pay</model>
                <title>Glocash</title>
                <order_status>processing</order_status>
                <merchant_id />
                <api_user />
                <req_appid />
                <allowspecific>0</allowspecific>
                <redirect_url>glocash/standard/redirectpay</redirect_url>
				<secure3d>1</secure3d>
				<method>C01</method>
				<terminal>glocashpayment</terminal>
				<sandbox>1</sandbox>
            </glocash_pay>
        </payment>
    </default>
</config>
